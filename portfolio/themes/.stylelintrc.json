{
  "extends": [
    "stylelint-config-sass-guidelines"
  ],
  "rules": {
    "indentation": [
      4,
      {
        "except": [
          "value"
        ]
      }
    ],
    "at-rule-no-unknown": null,
    "order/properties-alphabetical-order": null,
    "selector-max-compound-selectors": 5,
    "max-nesting-depth": 4
  },
  "ignoreFiles": [
    "**/node_modules/",
    "shared/fontawesome/**/*.scss",
    "**/*.css",
    "**/*.min.css"
  ]
}
