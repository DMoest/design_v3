<div class="container">
    <div class="header" role="banner">
        {% if pages["_meta"].meta.logo %}
            {# LOGO #}
            <div class="logo">
                <a class="link" href="{{ base_url }}">
                    <img class="img" src="{{ base_url }}/{{ pages["_meta"].meta.logo|url }}"
                         alt="Logo image"/>
                </a>
            </div>
        {% endif %}

        {# TITLE #}
        <div class="title_tagline" {{ pages["_meta"].meta.tagline ? ' class="tagline"' }}>
            <h1 class="title">{{ site_title }}</h1>
            <a class="tagline_link tagline link" href="{{ base_url }}">
                {{ pages["_meta"].meta.tagline|markdown }}
            </a>
        </div>

        {# MENU #}
        <a class="nav-toggle" id="nav-toggle" title="Toggle Menu" role="button" aria-controls="nav"
           aria-expanded="false"
           tabindex="1">
            <i class="fa fa-bars" aria-hidden="true" id="toggler"></i>
            <span class="sr-only">Toggle Menu</span>
        </a>
    </div>

    {# NAVIGATION #}
    <div class="nav">
        <div id="nav" class="nav-container" role="navigation" tabindex="-1">
            <ul class="nav-container-menu">
                {% for page in pages(depthOffset=-1) if page.title and not page.hidden %}
                    <li class="button">
                        {% if page.id==current_page.id %}
                            <a class="nav__link--active" href="{{ page.url }}">
                                <p class="nav__linkText--active">{{ page.title }}</p>
                            </a>
                        {% else %}
                            <a class="nav__link" href="{{ page.url }}">
                                <p class="nav__linkText">{{ page.title }}</p>
                            </a>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
