<div class="header flex_row" role="banner">
    <div class="site-header std_padding_left">
        {% if pages["_meta"].meta.logo %}
            <div class="logo_container">
                <a href="{{ base_url }}">
                    <img class="logo_img" src="{{ base_url }}/{{ pages["_meta"].meta.logo|url }}"
                    alt="" />
                </a>
            </div>
        {% endif %}

        <div class="title div_inline" {{ pages["_meta"].meta.tagline ? ' class="tagline"' }}>
            <a class="tagline_link" href="{{ base_url }}">
                <h1 class="">{{ site_title }}</h1>
                {{ pages["_meta"].meta.tagline|markdown }}
            </a>
        </div>

        <a class="nav-toggle" id="nav-toggle" title="Toggle Menu" role="button" aria-controls="nav" aria-expanded="false"
            tabindex="1">
            <i class="fa fa-bars" aria-hidden="true" id="toggler"></i>
            <span class="sr-only">Toggle Menu</span>
        </a>
    </div>

    <div class="nav std_padding_right">
        <div id="nav" role="navigation" tabindex="-1">
            <ul>
                {% for page in pages(depthOffset=-1) if page.title and not page.hidden %}
                    <li class="button">
                    {% if page.id==current_page.id %}
                        <a class="active_nav_link_text" href="{{ page.url }}">
                            <p class="active_nav_link_text">{{ page.title }}</p>
                        </a>
                    {% else %}
                        <a class="nav_link" href="{{ page.url }}">
                            <p class="nav_link_text">{{ page.title }}</p>
                        </a>
                    {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
